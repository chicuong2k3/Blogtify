    <script>
        function applyCSS(link) {
            if (link.rel === 'preload') {
                link.rel = 'stylesheet';
                link.media = 'all';
            }
        }

        setTimeout(() => {
            document.querySelectorAll('link[rel="preload"][as="style"]').forEach(applyCSS);
        }, 100);
    </script>

